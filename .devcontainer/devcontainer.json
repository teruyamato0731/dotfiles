{
	"name": "dotfiles-ubuntu",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"remoteUser": "ubuntu",
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "./install.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"yzhang.markdown-all-in-one",
				"docker.docker",
				"timonwong.shellcheck"
			]
		}
	}
}
