{
  "name": "dotfiles-ubuntu",
  "build": {
    "dockerfile": "Dockerfile",
    "target": "dev"
  },
  "remoteUser": "ubuntu",
  "initializeCommand": "mkdir -p ${localWorkspaceFolder}/.cache",
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "./install.sh && git config --global --add include.path ~/.gitconfig.custom",
  "containerEnv": {
    "HISTFILE": "${containerWorkspaceFolder}/.cache/.bash_history"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "dotfiles.repository": "Override user's dotfiles.repository"
      },
      "extensions": [
        "yzhang.markdown-all-in-one",
        "docker.docker",
        "timonwong.shellcheck"
      ]
    }
  }
}
