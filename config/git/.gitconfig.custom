[core]
	editor = code --wait
[alias]
	aliases = "!git config --get-regexp '^alias\\.' \
		| awk '{ sub(/^alias./, \"\"); name=$1; $1=\"\"; \
				gsub(/[[:space:]]+/, \" \"); if(length($0) > 120) $0 = substr($0, 1, 117)\"...\" ; \
				printf \"%-8s=%s\\n\", name, $0}' \
		| sort"
	amend = commit --amend --no-edit
	b = branch
	cp = cherry-pick
	sp = stash pop
	ss = stash push -u
	undo = !git reset --mixed @^ && git stash push -u -m 'Undo last commit'
